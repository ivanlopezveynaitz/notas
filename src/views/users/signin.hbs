<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Iniciar Sesión
            </div>
            <img src="/img/user.png" class="rounded-circle mx-auto d-block m-4 logo"
                 alt="logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-control">
                        <input type="email" 
                               class="form-control"
                               name="email" 
                               placeholder="Introduzca su email"
                               value="ivan@gmail.com"
                        >
                    </div>                    
                    <div class="form-control">
                        <input type="password" 
                               class="form-control"
                               name="password" 
                               placeholder="Introduzca su contraseña"
                               value="Ivan123"
                        >
                    </div>
                    <div class="form-group d-grid gap-2 m-2">
                        <button type="submit" 
                               class="btn btn-primary btn-block"
                        >Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>