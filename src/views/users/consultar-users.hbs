<div class="row">
    {{#each users}}
        <div class="col-md-4">
            <div class="card text-dark bg-light border-info mb-3">
                <div class="card-header">
                    <img src="/img/user.png" class="rounded-circle mx-auto d-block m-4 logo"
                         alt="logo">
                    <h4 class="card-title text-dark d-flex
                               justify-content-between align-items-center">
                        {{nombre}}
                        <a href="/users/edit:{{_id}}">
                            <i class="fa-solid fa-user-pen"></i>
                        </a>
                        <a href="/users/delete:{{_id}}">
                            <i class="fa-solid fa-user-xmark"></i>
                        </a>
                    </h4>
                </div>
                <div class="card-body">
                    <p>Email: <i class="far fa-envelope"></i> {{email}}</p>
                    <p>Password: <i class="fas fa-unlock-alt"></i> {{password}}</p>

                   {{#unless tipo}}
                      <p>Tipo de usuario: <i class="fas fa-user-tie"></i> Administrador</p>
                   {{else}}
                      <p>Tipo de usuario: <i class="far fa-user"></i> Regular</p>
                   {{/unless}}
                </div>
            </div>
        </div>
    {{/each}}
</div>  